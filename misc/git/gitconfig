[user]
    name = Holger Jestaedt
    email = holger.jestaedt@flyrlabs.com
    username = hjestaedt-flyr
[init]
    defaultBranch = main
[core]
    editor = vim
    excludesfile = ~/.gitignore
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[color]
    ui = true
[color "branch"]
    current = green bold
    local = green
    remote = red
[color "status"]
    added = green
    changed = yellow
    untracked = red
[alias]
    a = add --all
    b = branch
    ba = branch -a
    bd = branch -d
    bdd = branch -D
    br = branch -r
    c = commit
    cam = commit --amend
    cl = clone
    cp = cherry-pick
    d = diff
    dc = diff --cached
    dk = diff --check
    dck = diff --cached --check
    dt = difftool
    dct = difftool --cached
    f = fetch
    fp = fetch --prune
    l = log
    lo = log --oneline
    lg = log --oneline --graph --decorate
    ls = ls-files
    m = merge
    ma = merge --abort
    mc = merge --continue
    ms = merge --skip
    o = checkout
    ob = checkout -b
    pr = prune -v
    ps = push
    psf = push -f
    psu = push -u
    pst = push --tags
    pl = pull
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbi = rebase --interactive
    rbs = rebase --skip
    re = reset
    reh = reset --hard
    rem = reset --mixed
    res = reset --soft
    reom = reset --hard origin/main
    r = remote
    ra = remote add
    rr = remote rm
    rv = remote -v
    s = status
    ss = status -s -b
    st = stash
    sw = switch
    swc = switch -c
    t = tag
    td = tag -d
    al = !git config -l | grep alias | cut -c 7-
    fal = !sh -c \"git config -l | grep alias | cut -c 7- | grep $1\"
